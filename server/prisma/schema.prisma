generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId            Int     @id @default(autoincrement())
  username          String?
  email             String  @unique
  profilePictureUrl String?
  password          String?
  role              Role    @default(MANAGER) // New column with default role

}

enum Role {
  ADMIN
  MANAGER
  INTERN
}


model Project {
  id           Int           @id @default(autoincrement())
  name         String
  status       String @default("New")
  description  String?
  startDate    DateTime?
  endDate      DateTime?
  tasks        Task[]
}

model Task {
  id             Int       @id @default(autoincrement())
  title          String
  description    String?
  status         String?
  priority       String?
  startDate      DateTime?
  dueDate        DateTime?
  projectId      Int
  assignedBy  String
  assignedTo String

  project         Project          @relation(fields: [projectId], references: [id])
}

